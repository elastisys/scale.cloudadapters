<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

  <!-- Log output directory is specified by system property/environment
       variable 'LOG_DIR'. If unspecified, a directory is used.-->
  <variable name="logdir" value="${LOG_DIR:-/tmp/elastisys/logs/azurepool}"/>
  <!-- Logging level to set for stdout -->
  <variable name="stdout_log_level" value="${STDOUT_LOG_LEVEL:-INFO}"/>

  <!-- captures to file -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${logdir}/azurepool.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>${logdir}/azurepool.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <!-- keep 7 days' worth of history -->
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <!-- when running as multipool, cloudpool MDC property is set mark which cloudpool instance produced a log entry -->
      <pattern>%date{ISO8601} [%X{cloudpool:-server}/%thread] %-5level [%class{0}:%method:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <!-- captures to stdout -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.out</target>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>${stdout_log_level}</level>
    </filter>
    <encoder>
      <!-- when running as multipool, cloudpool MDC property is set mark which cloudpool instance produced a log entry -->
      <pattern>%date{ISO8601} [%X{cloudpool:-server}/%thread] %-5level [%class{0}:%method:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <root>
    <level value="ERROR" />
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="com.elastisys">
    <level value="DEBUG"/>
  </logger>

  <!-- Get rid of noisy "Correlation ID ..." output  -->
  <logger name="com.microsoft.aad.adal4j">
    <level value="WARN"/>
  </logger>

  <!-- needed when azureSdkLogLevel config is set to value other than NONE -->
  <logger name="com.microsoft">
    <level value="INFO"/>
  </logger>
  
</configuration>
